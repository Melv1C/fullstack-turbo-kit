{
  "name": "backend",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsc --watch & tsx watch src/index.ts",
    "build": "npm run generate && tsup",
    "build:watch": "tsup --watch",
    "start": "node ./dist/index.js",
    "generate": "prisma generate",
    "migrate": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "validate": "prisma validate",
    "seed": "tsx src/seed/index.ts",
    "seed:verbose": "tsx src/seed/index.ts --verbose",
    "seed:prod": "node dist/seed/index.js",
    "lint": "eslint . --max-warnings 0",
    "check-types": "tsc --noEmit"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "@hono/zod-validator": "^0.7.6",
    "@prisma/studio-core": "^0.9.0",
    "@repo/utils": "*",
    "better-auth": "^1.4.13",
    "dotenv": "^17.2.3",
    "hono": "^4.11.4",
    "prisma": "^7.2.0",
    "winston": "^3.19.0",
    "winston-transport": "^4.9.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/node": "^25.0.9",
    "pg": "^8.17.1",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
