{
  "name": "fullstack-turbo-kit",
  "version": "0.0.0",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "generate": "turbo run generate",
    "migrate": "turbo run migrate",
    "migrate:deploy": "turbo run migrate:deploy",
    "validate": "turbo run validate",
    "seed": "npm run seed --workspace=backend",
    "release:patch": "npm version patch && git push --follow-tags origin main",
    "release:minor": "npm version minor && git push --follow-tags origin main",
    "release:major": "npm version major && git push --follow-tags origin main"
  },
  "devDependencies": {
    "prettier": "^3.8.1",
    "turbo": "^2.7.6",
    "typescript": "5.9.3"
  },
  "packageManager": "npm@11.8.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "optionalDependencies": {
    "@esbuild/darwin-arm64": "^0.27.2",
    "@rollup/rollup-linux-x64-gnu": "4.56.0"
  }
}
