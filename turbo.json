{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "envMode": "strict",
  "globalEnv": ["NODE_ENV", "DATABASE_URL"],
  "globalDependencies": [".env*"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": ["VITE_*", "NEXT_PUBLIC_*"],
      "inputs": ["$TURBO_DEFAULT$"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^build", "^check-types"]
    },
    "generate": {
      "cache": false
    },
    "migrate": {
      "cache": false,
      "persistent": true
    },
    "migrate:deploy": {
      "cache": false
    },
    "validate": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
